{
  "locals": {
    "url": "http://wrktg.com",
    "dev": "http://localhost:8000",    
    "name": "WRKTG",
    "owner": "WRKTG Inc."
  },
  "port": 8000,
  "plugins": [
    "wintersmith-browserify",
    "wintersmith-less",
    "./plugins/paginator",
    "./plugins/helpers",
    "./plugins/env-patch"     
  ],
  "require": {
    "moment": "moment",
    "_": "underscore",
    "typogr": "typogr"
  },
  "jade": {
    "pretty": true
  },
  "markdown": {
    "smartLists": true,
    "smartypants": true
  },
  "paginator": {
    "perPage": 3,
    "articles": "blog",
    "first": "blog/index.html",
    "filename": "blog/%d/index.html" 
  }
}